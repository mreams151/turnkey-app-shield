{
  "name": "turnkey-app-shield",
  "version": "2.0.0",
  "description": "TurnkeyAppShield - Modern software protection and licensing platform",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=turnkey-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name turnkey-app-shield",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply turnkey-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply turnkey-production",
    "db:seed": "wrangler d1 execute turnkey-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute turnkey-app-shield-production --local",
    "db:console:prod": "wrangler d1 execute turnkey-app-shield-production --remote",
    "db:backup:local": "wrangler d1 execute turnkey-app-shield-production --local --command=\".dump\" > database-backups/local-backup-$(date +%Y%m%d_%H%M%S).sql",
    "db:backup:prod": "wrangler d1 execute turnkey-app-shield-production --remote --command=\".dump\" > database-backups/production-backup-$(date +%Y%m%d_%H%M%S).sql",
    "db:backup:all": "mkdir -p database-backups && npm run db:backup:local && npm run db:backup:prod",
    "backup:complete": "node backup-database.js",
    "test": "curl http://localhost:3000",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "start:pm2": "pm2 start ecosystem.config.cjs"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.3.0",
    "@types/qrcode": "^1.5.5",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0",
    "hono": "^4.9.8",
    "jsonwebtoken": "^9.0.0",
    "nanoid": "^5.0.0",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.2",
    "@types/jsonwebtoken": "^9.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
